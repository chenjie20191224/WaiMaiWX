/* components/Top.wxss */
.top .delivery_msg {
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  background-color: var(--themeColor);
}
.top .delivery_msg .left {
  display: flex;
  padding: 5px;
}
.top .delivery_msg .left .icon {
  width: 100rpx;
  height: 100rpx;
}
.top .delivery_msg .left .icon image {
  width: 100%;
}
.top .delivery_msg .left .msg {
  padding-left: 10px;
}
.top .delivery_msg .left .msg .row {
  color: white;
  font-size: smaller;
}
.top .delivery_msg .left .msg .row .f {
  padding: 0 5px;
}
.top .delivery_msg .left .msg .row text {
  font-size: 10;
}
.top .delivery_msg .right {
  display: flex;
  width: 150rpx;
  justify-content: center;
  align-items: center;
}
.top .delivery_msg .right .button {
  padding: 5rpx 15rpx;
  display: flex;
  font-size: 25rpx;
  height: 45rpx;
  color: white;
  border: 1rpx solid white;
  position: relative;
}
.top .delivery_msg .right .button button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
