/* pages/oderList/index.wxss */
.order_wrap {
  height: 250rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #c3c3c3;
  border-bottom: 1rpx solid #c3c3c3;
}
.order_wrap .title {
  height: 70rpx;
  border-bottom: 1rpx solid #c3c3c3;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order_wrap .title .left {
  font-size: 30rpx;
}
.order_wrap .title .right {
  padding-right: 30rpx;
  font-size: 26rpx;
  color: red;
}
.order_wrap .title .right2 {
  color: green;
}
.order_wrap .content {
  height: 140rpx;
  padding-top: 40rpx;
}
.order_wrap .content .content2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order_wrap .content .content2 .left {
  padding-left: 80rpx;
}
.order_wrap .content .content2 .left .name {
  font-size: 30rpx;
}
.order_wrap .content .content2 .left .detail {
  font-size: 28rpx;
}
.order_wrap .content .content2 .left .detail text {
  color: var(--themeColor);
}
.order_wrap .content .content2 .right {
  padding-right: 10rpx;
  font-size: 30rpx;
}
.order_wrap .content .content2 .right text {
  font-size: 30rpx;
  margin-left: 10rpx;
}
.order_wrap .content .date {
  padding-top: 15rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
  font-size: 26rpx;
}
.none {
  height: 100vh;
  background-color: #c3c3c3;
  color: white;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
